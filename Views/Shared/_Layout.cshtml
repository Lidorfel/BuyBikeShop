<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BuyBike</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuyBike.styles.css" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header class="p-3 bg-black">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="~/assets/cycling.png" alt="BuyBike Logo" width="40" height="40" style="filter: brightness(0) invert(1);">
                    <span class="ms-2 fs-4">BuyBike</span>
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a class="nav-link px-2 text-white" href="/">Home</a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="Bike" asp-action="index">Bikes</a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="Part" asp-action="index">Parts</a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="Accessory" asp-action="index">Accessories</a></li>
                    <li><a class="nav-link px-2 text-danger" asp-controller="Sale" asp-action="index">Sale</a></li>
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" id="searchBarForm" role="search" method="get" asp-action="FilteredBySearch" asp-controller="Home">
                    <input type="search" id="searchBar" name="searchBar" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="searchBar">
                </form>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BuyBike - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@section Scripts{
    <script>
        document.getElementById("#searchBar").onchange = function () {
            document.getElementById("#searchBarForm").submit();
        };
    </script>
}
