@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .bg-404 {
       
            background: url('https://cdn.pixabay.com/photo/2016/11/29/11/29/bicycle-1869176_1280.jpg') no-repeat center center;
            background-size: cover;
            height: 100vh; 
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .overlay {
            color: #fff; 
            border-radius: 15px; 
            padding: 40px; 
            max-width: 600px; 
            width: 1400px;
            height: 400px; 
            text-align: center;
          
            background: linear-gradient( rgba(0,0,0,0) 0%, rgba(0,0,0,0) 10%,
            rgba(0,0,0,0.1) 40%,
            rgba(0,0,0,0.1) 60%, 
            rgba(0,0,0,0) 90%, 
            rgba(0,0,0,0) 100% );
        }





        h1 {
            font-size: 80px;
            margin-bottom: 20px; 
        }

        p {
            font-size: 24px;
            margin-bottom: 30px; 
        }

        a {
            font-weight: bold;
            letter-spacing: 1px; 
        }


        .btn-primary {
            background-color: transparent; 
            color: white; 
            border: 1px solid white; 
            padding: 10px 30px; 
            border-radius: 20px; 
            transition: transform 0.2s, background-color 0.2s, color 0.2s; 
            font-weight: bold; 
            width: 200px;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: rgba(173, 216, 230, 0.5); 
                color: #007bff; 
                border-color: #007bff; 
                transform: scale(1.05); 
            }





        
    </style>
</head>
<body>

    <div class="bg-404">
        <div class="overlay d-flex flex-column justify-content-center" style="align-content:center; align-items:center;">
            <h1>404</h1>
            <p class="lead">Oops! Page not found.</p>
            <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</body>
</html>
