@{
    ViewData["Title"] = "Home Page";

}

@model IEnumerable<BuyBikeShop.Models.Product>

<div class="text-center">
    <div class="album py-5 bg-body-tertiary gap-5">
        <div class="container p-5">
            <div class="row">
                <div class="col-md-6">
                    <div style="height: 450px; padding-bottom: 140px;">
                        <video autoplay muted loop id="video-background" poster="placeholder.jpg" style="width: 100%;">
                            <source src="~/assets/XLITE - The fastest race bike we have ever developed_ Tech Details.mp4" type="video/mp4">
                        </video>
                    </div>
                </div>
                <div class="col-md-6">
                    <!DOCTYPE html>
                    <html lang="en">
                    <head>
                        <meta charset="UTF-8">
                        <meta name="viewport" content="width=device-width, initial-scale=1.0">
                        <title>Carousel Example</title>
                        <!-- Bootstrap CSS -->
                        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
                        <!-- Bootstrap Bundle JS (includes Popper) -->
                        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
                    </head>
                    <body>
                        <div id="relatedProjectsCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <!-- First slide -->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a href="#"><img class="img-fluid" src="https://via.placeholder.com/1200x300" alt=""></a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Second slide -->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a href="#"><img class="img-fluid" src="https://via.placeholder.com/1200x300" alt=""></a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Third slide -->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a href="#"><img class="img-fluid" src="https://via.placeholder.com/1200x300" alt=""></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Previous and Next arrows -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#relatedProjectsCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#relatedProjectsCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </body>
                </html>

                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 g-">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <a asp-controller="Product" asp-action="" asp-route-id="@product.Id" class="text-reset text-decoration-none">


                            <div class="card shadow-sm" style="height: 400px;">
                                <div class="card-body d-flex flex-column ">

                                    @if (product.Sale_Perc > 0)
                                    {
                                        <div class="position-absolute top-0 start-0">
                                            <span class="badge bg-danger">Sale</span>
                                        </div>
                                    }
                                    @if (product.Class_Name == "Bike")
                                    {
                                        <img src="@product.Photo" class="card-img-top" style="height: 240px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img src="@product.Photo" class="card-img-top" style="height: 240px; object-fit: scale-down;">

                                    }
                                    <h4 class="card-title mt-2">@product.Title</h4>

                                    <!-- Price and Discount Information -->
                                    <div class="mt-auto">
                                        @if (product.Sale_Perc > 0)
                                        {
                                            <p class="mb-1">
                                                <s>@product.Price.ToString("N0")$</s> <span class="text-danger">-@product.Sale_Perc%</span>
                                            </p>
                                            <p class="text-success mb-2">@((product.Price - (product.Price * product.Sale_Perc / 100.0)).ToString("N0"))$</p>
                                        }
                                        else
                                        {
                                            <p class="mb-6">@product.Price.ToString("N0")$</p>
                                        }
                                    </div>

                                    <!-- Release Date and Rating -->
                                    <div class="d-flex justify-content-between align-items-center mb-2 ">
                                        <small class="text-muted">Release Date: @product.ReleaseDate.ToString("dd/MM/yyyy")</small>
                                        <small class="text-muted d-flex align-items-center">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="@(i <= product.Rating ? "bi bi-star-fill" : "bi bi-star")" style="color: #ffc107;"></i>
                                            }
                                            @product.Rating / 5
                                        </small>
                                    </div>
                                </div>
                            </div>

                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>



